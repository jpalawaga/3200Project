#include <iostream>
#include <set>
using namespace std;

class compareHigh {
public:
   compareHigh() {}
   compareHigh(const pair<int,int>& a) : first(a.first), second(a.second) {}
   bool operator<(const compareHigh& a) const {
      return first > a.first && second < a.second;
   }
   int first, second;
};

int main() {

   int cases = 1;
   int n, k1, k2;
   while(cin >> n >> k1 >> k2 && !( n == 0 && k1 == 0 && k2 == 0)) {
      set<pair<int, int> > low;
      set<compareHigh> high;
      for(int i = 1 ; i <= n; ++i) {
	 int next;
	 cin >> next;
	 
	 low.insert(make_pair(next, i));
	 high.insert(make_pair(next, i));
	 if(k1 < (int)low.size()) {
	       //   cout << (--low.end())->second << endl;
	       low.erase(--low.end());
	    }
	    if(k2 < (int)high.size()) {
	       cout << (--low.end())->second << endl;
	       high.erase(--high.end());
	    }
	    
	    
	    cout << "Case " << cases++ << endl;
	    for(set<pair<int, int> >::iterator it = low.begin(); it != low.end();
	  ++it) {
	 if(it != low.begin()) {
	    cout << " ";
	 }
	 cout << it->second;
      }
      cout << endl;
      for(set<compareHigh>::iterator it = high.begin(); it != high.end();
	  ++it) {
	 if(it != high.begin()) {
	    cout << " ";
	 }
	 cout << "|" << it->second << "|";
      }
      cout << endl;      
   }

   
}
